@model Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit</h1>

<div class="card">
    <div class="card-header">
        <h4>Update Category Information</h4>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card-body">
                <form class="needs-validation" method="post" asp-controller="Dashboard" asp-action="AddCategory">
                    <div class="form-group">
                        <label class="col-form-label">Category Name</label>
                        <input type="text" asp-for="Name" class="form-control" required="">
                        <div class="invalid-feedback">Input Category!</div>
                        <div class="text-danger">@ViewBag.msg</div>
                    </div>
                    <input class="btn text-light btn-primary" type="submit" value="Submit" readonly />
                </form>

            </div>

        </div>
    </div>
</div>
